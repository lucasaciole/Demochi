<%= simple_form_for [:admin, @article] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :home_headline, as: :radio_buttons %>
  </div>

  <div class="form-image">
    <label> <%= Article.human_attribute_name(:image) %> </label>
    <%= f.file_field :image %> <br />
    <%= image_tag @article.image_url(:thumb), :class => 'img-polaroid' if @article.image? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
