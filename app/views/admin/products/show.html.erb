<table class="table table-bordered">
  <thead>
    <th> <%= Product.human_attribute_name(:code) %> </th>
    <th> <%= Product.human_attribute_name(:description) %> </th>
    <th> <%= Product.human_attribute_name(:category) %> </th>
    <th> <%= Product.human_attribute_name(:price) %> </th>
    <th> <%= Product.human_attribute_name(:image) %> </th>
  </thead>
  
  <tbody>
    <tr>
      <td> <%= @product.code %> </td>
      <td> <%= @product.description %> </td>
      <td> <%= @product.category.name %> </td>
      <td> <%= number_to_currency(@product.price) %> </td>
  	  <td> <%= image_tag @product.image_url(:thumb), :class => 'img-polaroid' if @product.image? %> </td>
    </tr>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t(:edit), edit_admin_product_path(@product), :class => 'btn btn-info' %>
  <%= link_to t(:back), admin_products_path, :class => 'btn' %>
</div>