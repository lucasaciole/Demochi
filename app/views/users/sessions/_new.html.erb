<h2> <%= t('simple_form.titles.sign_in') %> </h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :email,                 
    			:required  => true, 
    			:autofocus => true, 
    			:label     => t('form.caption.email') %>

    <%= f.input :password,              
    						:required => true,                     
    						:label    => t('form.caption.password') %>

    <%= f.input :remember_me, 
    						:as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:'user.sign_in') %>
  </div>
<% end %>


